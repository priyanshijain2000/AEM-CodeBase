<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Additional Resources"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-container__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <documentation
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Documentation"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <container
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <notes
                                        granite:class="coral-Form-fieldlabel"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        text="Note: This is a child of the container component with a text/separator.  Author will be required to enable responsive grid if needed.  Author must include caption on image for mobile viewport title."/>
                                    <styleoptions
                                        granite:class="coral-Form-fieldlabel"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/text"
                                        text="Author is not permitted to change styles for the main title nor the tabs; however, author can change some styles within tabs."/>
                                    <firstoption
                                        jcr:primaryType="nt:unstructured"
                                        sling:hideResource="true"
                                        sling:resourceType="granite/ui/components/coral/foundation/well"/>
                                    <otheroptions
                                        jcr:primaryType="nt:unstructured"
                                        sling:hideResource="true"
                                        sling:resourceType="granite/ui/components/coral/foundation/well"/>
                                    <secondoption
                                        jcr:primaryType="nt:unstructured"
                                        sling:hideResource="true"
                                        sling:resourceType="granite/ui/components/coral/foundation/well"/>
                                    <thirdoption
                                        jcr:primaryType="nt:unstructured"
                                        sling:hideResource="true"
                                        sling:resourceType="granite/ui/components/coral/foundation/well"/>
                                </items>
                            </container>
                        </items>
                    </documentation>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
