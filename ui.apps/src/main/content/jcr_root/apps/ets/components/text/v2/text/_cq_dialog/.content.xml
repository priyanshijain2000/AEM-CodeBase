<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Description"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[ets.site]"
    helpPath="https://www.adobe.com/go/aem_cmp_text_v2"
    trackingFeature="core-components:text:v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        granite:class="cq-RichText-FixedColumn-column"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                name="./text"
                                                disableXSSFiltering="{Boolean}true"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins jcr:primaryType="nt:unstructured">
                                                    <styles
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                        <styles jcr:primaryType="cq:WidgetCollection">
                                                            <theme
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="theme-color"
                                                                text="Theme Style"/>
                                                            <article-title
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="article-title"
                                                                text="Article Title"/>
                                                            <label-title
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="label-title"
                                                                text="Label Title"/>
                                                            <author-name
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="quotes-author-name"
                                                                text="Author Name"/>
                                                            <author-info
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="quotes-author-info"
                                                                text="Author Info"/>
                                                            <banner-title
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="banner-title"
                                                                text="Banner Title"/>
                                                            <date
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="date"
                                                                text="Date Font Style"/>
                                                            <title21-28
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="title21-28"
                                                                text="Small Heading"/>
                                                            <title18-23
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="title18-23"
                                                                text="Extra Bold Caps"/>
                                                            <image-text-center
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="image-text-center"
                                                                text="Image Center Align"/>
                                                            <image-left
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="image-text-left"
                                                                text="Add Spacing to Image Left"/>
                                                            <image-right
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="image-text-right"
                                                                text="Add Spacing to Image Right"/>
                                                            <image-top
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="image-text-top"
                                                                text="Add Spacing to Image Top"/>
                                                            <image-bottom
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="image-text-bottom"
                                                                text="Add Spacing to Image Bottom"/>
                                                            <image-scaling
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="col-12 col-xl-4"
                                                                text="Scale the Image"/>
                                                            <heading1
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="heading1"
                                                                text="Heading 1"/>
                                                            <heading2
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="heading2"
                                                                text="Heading 2"/>
                                                            <heading3
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="heading3"
                                                                text="Heading 3"/>
                                                            <heading4
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="heading4"
                                                                text="Heading 4"/>
                                                            <heading5
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="heading5"
                                                                text="Heading 5"/>
                                                            <heading6
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="heading6"
                                                                text="Heading 6"/>
                                                        </styles>
                                                    </styles>
                                                </rtePlugins>
                                                <uiSettings jcr:primaryType="nt:unstructured">
                                                    <cui jcr:primaryType="nt:unstructured">
                                                        <inline
                                                            jcr:primaryType="nt:unstructured"
                                                            toolbar="[format#bold,format#italic,format#underline,justify#justifyleft,justify#justifycenter,justify#justifyright,lists#unordered,lists#ordered,lists#outdent,lists#indent,links#modifylink,links#unlink,table#createoredit,#paraformat,links#anchor,subsuperscript#subscript,subsuperscript#superscript,findreplace#find,findreplace#replace,#styles,misctools#specialchars,misctools#sourceedit,image#imageProps]">
                                                            <popovers jcr:primaryType="nt:unstructured">
                                                                <styles
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="styles:getStyles:styles-pulldown"
                                                                    ref="styles"/>
                                                            </popovers>
                                                        </inline>
                                                    </cui>
                                                </uiSettings>
                                                <htmlRules jcr:primaryType="nt:unstructured">
                                                    <docType jcr:primaryType="nt:unstructured">
                                                        <typeConfig
                                                            jcr:primaryType="nt:unstructured"
                                                            useSemanticMarkup="{Boolean}true"/>
                                                    </docType>
                                                </htmlRules>
                                            </text>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
